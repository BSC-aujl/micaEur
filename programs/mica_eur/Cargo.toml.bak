[package]
name = "mica_eur"
version = "0.1.0"
description = "MiCA-compliant Euro stablecoin on Solana"
edition = "2021"

[lib]
crate-type = ["cdylib", "lib"]
name = "mica_eur"

[features]
default = []
cpi = ["no-entrypoint"]
no-entrypoint = []
no-idl = []
no-log-ix-name = []
idl-build = ["anchor-lang/idl-build"]

[dependencies]
anchor-lang = "=0.31.1"
anchor-spl = { version = "=0.31.1", features = ["token_2022"] }
solana-program = { workspace = true }
solana-program-test = { workspace = true }
# Token 2022 version compatible with Solana 1.18.x
spl-token-2022 = "=0.9.0"
spl-transfer-hook-interface = "=0.3.0"
spl-pod = "=0.2.2"
# Specify the exact version of solana_rbpf to avoid yanked dependency issues
solana_rbpf = "=0.8.5"
