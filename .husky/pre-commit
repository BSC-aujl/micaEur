#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Set this variable to 1 to enable fast failing
export FORCE_EXIT_ON_ERROR=1

echo "ğŸ”’ Running pre-commit checks..."

# Run KYC verification first since it's critical
echo "âš™ï¸ Checking KYC verification levels..."
npm run verify:kyc || { echo "âŒ KYC verification failed!"; exit 1; }

# Check for transaction signature safety issues
echo "âš™ï¸ Checking transaction signature safety..."
npm run verify:signatures || { echo "âŒ Signature verification failed!"; exit 1; }

# Type checking
echo "âš™ï¸ Checking TypeScript types..."
npm run verify:types || { echo "âŒ Type checking failed!"; exit 1; }

# Set this variable to 1 to skip full precommit (linting and testing)
if [ "$SKIP_FULL_PRECOMMIT" = "1" ]; then
  echo "âš ï¸ Skipping full pre-commit checks (linting, building, testing) as SKIP_FULL_PRECOMMIT=1"
  exit 0
fi

# Run the full precommit script (linting, building, and testing)
echo "âš™ï¸ Running full pre-commit checks..."
npm run precommit || { echo "âŒ Pre-commit checks failed!"; exit 1; }

echo "âœ… All pre-commit checks passed!"
exit 0 