#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Skip all hooks if HUSKY_SKIP_HOOKS is set
if [ "$HUSKY_SKIP_HOOKS" = "1" ]; then
  echo "‚ö†Ô∏è Skipping all hooks as HUSKY_SKIP_HOOKS=1"
  exit 0
fi

# Set this variable to 1 to enable fast failing
export FORCE_EXIT_ON_ERROR=1

echo "üîí Running pre-commit checks..."

# Run KYC verification first since it's critical
if [ "$SKIP_KYC_CHECK" != "1" ]; then
  echo "‚öôÔ∏è Checking KYC verification levels..."
  npm run verify:kyc || { echo "‚ùå KYC verification failed!"; exit 1; }
else
  echo "‚ö†Ô∏è Skipping KYC verification as SKIP_KYC_CHECK=1"
fi

# Check for transaction signature safety issues
if [ "$SKIP_SIGNATURE_CHECK" != "1" ]; then
  echo "‚öôÔ∏è Checking transaction signature safety..."
  npm run verify:signatures || { echo "‚ùå Signature verification failed!"; exit 1; }
else
  echo "‚ö†Ô∏è Skipping signature verification as SKIP_SIGNATURE_CHECK=1"
fi

# TypeScript type checking
if [ "$SKIP_TYPE_CHECK" != "1" ]; then
  echo "‚öôÔ∏è Checking TypeScript types..."
  npm run verify:types || { echo "‚ùå TypeScript type checking failed!"; exit 1; }
else
  echo "‚ö†Ô∏è Skipping TypeScript type checking as SKIP_TYPE_CHECK=1"
fi

# Verify Rust code separately using Cargo
if [ "$SKIP_RUST_CHECK" != "1" ]; then
  echo "‚öôÔ∏è Checking Rust code..."
  npm run verify:rust || { echo "‚ùå Rust verification failed!"; exit 1; }
else
  echo "‚ö†Ô∏è Skipping Rust verification as SKIP_RUST_CHECK=1"
fi

# Set this variable to 1 to skip full precommit (linting and testing)
if [ "$SKIP_FULL_PRECOMMIT" = "1" ]; then
  echo "‚ö†Ô∏è Skipping full pre-commit checks (linting, building, testing) as SKIP_FULL_PRECOMMIT=1"
  exit 0
fi

# Run the full precommit script (linting, building, and testing)
echo "‚öôÔ∏è Running full pre-commit checks..."
npm run precommit || { echo "‚ùå Pre-commit checks failed!"; exit 1; }

echo "‚úÖ All pre-commit checks passed!"
exit 0