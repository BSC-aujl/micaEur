{
  "name": "mica-eur",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w && eslint . --ext .ts --fix",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check && eslint . --ext .ts",
    "format": "prettier --write \"**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json}\"",
    "build": "anchor build",
    "build:skip-bpf": "./scripts/no-bpf-build.sh",
    "test": "anchor test",
    "test:jest": "jest --config jest.config.js",
    "test:jest:full": "jest --config jest.config.js --testMatch=\"**/tests/jest/mica-eur-full.test.ts\"",
    "test:jest:script": "./scripts/run-jest-tests.sh",
    "deploy": "anchor deploy",
    "clean": "rm -rf target/deploy target/idl .anchor",
    "test:functional": "ts-mocha -p ./tsconfig.json -t 1000000 tests/mica-eur-functional-tests.ts",
    "test:kyc-flow": "ts-mocha -p ./tsconfig.json -t 1000000 tests/kyc-end-to-end-flow.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "bn.js": "^5.2.0",
    "borsh": "^0.7.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.2",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/jest": "^29.5.11",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.15.0",
    "@babel/preset-typescript": "^7.24.1",
    "chai": "^4.3.4",
    "jest": "^29.7.0",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.1",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.9.5",
    "litesvm": "^0.2.0"
  }
}
