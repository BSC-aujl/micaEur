{
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w && eslint . --ext .ts --fix",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check && eslint . --ext .ts",
    "format": "prettier --write \"**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json}\"",
    "test": "./scripts/run-fixed-tests.sh",
    "test:ci": "./scripts/run-fixed-tests.sh",
    "test:unit": "npx ts-mocha -p ./tests/tsconfig.json tests/unit/basic.spec.ts",
    "test:kyc": "npx ts-mocha -p ./tests/tsconfig.json tests/unit/kyc_oracle.spec.ts",
    "test:token": "npx ts-mocha -p ./tests/tsconfig.json tests/unit/token_mint.spec.ts",
    "test:all": "./scripts/run-all-tests.sh",
    "test:full": "./scripts/run-all-tests.sh",
    "test:smoke": "node scripts/run-smoke-tests.js",
    "test:functional": "./tests/run-tests.sh functional",
    "test:extension": "./tests/run-tests.sh extension",
    "test:comprehensive": "./tests/run-tests.sh all",
    "build": "./scripts/build-no-proxy.sh",
    "clean": "./scripts/run-clean-project.sh",
    "prepare": "husky install",
    "precommit": "lint-staged && node scripts/verify-signatures.js && node scripts/verify-types.js && ./scripts/build-no-proxy.sh && npm run test:smoke",
    "check-versions": "node scripts/check-versions.js",
    "check-env": "node scripts/initialize-dotenv.js",
    "setup:dotenv": "node scripts/initialize-dotenv.js",
    "setup:test-keys": "node scripts/generate-test-keys.js",
    "setup:test-env": "./scripts/setup-test-env.sh",
    "setup:all": "npm run setup:dotenv && npm run setup:test-keys && npm run setup:test-env --build",
    "dotenv:push": "npx dotenv-vault push",
    "dotenv:push:test": "npx dotenv-vault push test",
    "dotenv:pull": "npx dotenv-vault pull",
    "dotenv:pull:test": "npx dotenv-vault pull test",
    "verify:signatures": "node scripts/verify-signatures.js",
    "verify:types": "node scripts/verify-types.js"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "0.3.9",
    "@solana/web3.js": "1.87.6",
    "dotenv-vault": "^1.26.2",
    "rpc-websockets": "^7.5.1",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "chai": "^4.3.4",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  }
}
